<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrowdWiseBali" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/sky_blue_200</item>
        <item name="colorSecondaryVariant">@color/sky_blue_300</item>

        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="bottomNavigationStyle">@style/CustomBottomNavigationView</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CrowdWiseBali.No.Bar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#004040</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@color/black</item>
        <item name="itemIconTint">@color/blue_500</item>
        <item name="itemTextColor">@color/blue_500</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
    </style>

</resources>